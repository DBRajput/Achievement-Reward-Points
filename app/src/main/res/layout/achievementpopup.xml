<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    android:layout_height="580dp"
    android:layout_gravity="center"
    android:background="@color/faintwhite"
    android:padding="5dp">

    <TextView
        android:id="@+id/txtforachievement"
        android:layout_width="260dp"
        android:layout_height="46dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Importance of Achievement"
        android:textColor="#3F51B5"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btncloseachievement"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:backgroundTint="#00000000"
        android:text="X"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txtforachievement"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtforachievement"
        app:layout_constraintTop_toTopOf="@+id/txtforachievement" />

    <ImageButton
        android:id="@+id/imgvimpachievement"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="26dp"
        android:background="@null"
        android:contentDescription="trophyveryimportant"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtforachievement"
        app:srcCompat="@drawable/trophyvimp" />

    <ImageButton
        android:id="@+id/imgimpachievement"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="26dp"
        android:background="@null"
        android:contentDescription="trophyimportant"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textveryhappy"
        app:srcCompat="@drawable/trophyimp" />

    <ImageButton
        android:id="@+id/imgniceachievement"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="26dp"
        android:background="@null"
        android:contentDescription="trophyhelpful"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texthappy"
        app:srcCompat="@drawable/trophynice" />

    <TextView
        android:id="@+id/textveryhappy"
        android:layout_width="128dp"
        android:layout_height="30dp"
        android:text="Very IMP"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imgvimpachievement"
        app:layout_constraintStart_toStartOf="@+id/imgvimpachievement"
        app:layout_constraintTop_toBottomOf="@+id/imgvimpachievement" />

    <TextView
        android:id="@+id/texthappy"
        android:layout_width="108dp"
        android:layout_height="30dp"
        android:text="Important"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imgimpachievement"
        app:layout_constraintStart_toStartOf="@+id/imgimpachievement"
        app:layout_constraintTop_toBottomOf="@+id/imgimpachievement" />

    <TextView
        android:id="@+id/textneutral"
        android:layout_width="96dp"
        android:layout_height="28dp"
        android:text="Helpful"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imgniceachievement"
        app:layout_constraintStart_toStartOf="@+id/imgniceachievement"
        app:layout_constraintTop_toBottomOf="@+id/imgniceachievement" />

</androidx.constraintlayout.widget.ConstraintLayout>